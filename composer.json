{
    "name": "canchas-sinteticas/backend",
    "description": "Backend para gestión de alquiler de canchas sintéticas",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "firebase/php-jwt": "^6.9",
        "symfony/yaml": "^7.3",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
